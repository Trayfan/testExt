{
    "manifest_version": 3,
    "name": "Roadmap.sh Extension",
    "version": "1.0",
    "description": "Adds a button to Roadmap.sh to send text to a server.",
    "permissions": ["activeTab", "scripting", "storage"],
    "content_scripts": [
      {
        "matches": ["https://roadmap.sh/qa"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "host_permissions": ["<all_urls>"]
  }
  