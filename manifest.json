{
    "manifest_version": 3,
    "name": "Allure Extension",
    "version": "1.0",
    "description": "Adds a button to Allure to send text to a server.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://allure.vsk.ru/*"
            ],
            "js": [
                "content.js"
            ],
            "type": "module"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "host_permissions": [
        "<all_urls>"
    ]
}